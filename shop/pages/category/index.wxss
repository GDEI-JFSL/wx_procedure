/* pages/category/index.wxss */
.category-list {
  width: 100%;
  position: absolute;
  top: 90rpx;
  bottom: 0rpx;
  display: flex;
}

.category-list .left {
  width: 200rpx;
  left: 0rpx;
  background-color: #f2f2f2;
}

.category-list .left .menu_item {
  position: relative;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.category-list .left .block {
  position: absolute;
  left: 0;
  width: 10rpx;
  height: 80%;
  top: 10%;
  background-color: #f06c7a;
}

.category-list .left .active {
  background-color: #fff;
}

.category-list .right {
  flex: 1;
  padding: 20rpx;
}

.category-list .right .banner {
  width: 100%;
  height: 24.262vw;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.3);
}

.category-list .right .goods_content_wrap {
  display: flex;
  flex-wrap: wrap;
  margin-top: 40rpx;
}

.category-list .right .goods_content_wrap .good_item {
  width: 33.33%;
  text-align: center;
  margin-bottom: 20rpx;
}

.category-list .right .goods_content_wrap .good_item image {
  width: 60%;
  margin: 0 auto;
}